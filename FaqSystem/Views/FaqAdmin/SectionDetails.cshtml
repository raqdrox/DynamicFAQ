@model FaqSystem.Models.FaqSection

@{
    ViewData["Title"] = "Details";
}
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>

    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="/css/Faq.css" />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
</head>
<body>
    <div class="wrapper align-content-center">
        <partial name="_FaqAdminSidebarPartial" />
        <div id="content">
            <h2>Section Details</h2>
            <div>
                <button type="button" class="btn btn-primary" id="toggleEditBtn" onclick="toggleEdit()">Edit</button>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteModal">Delete</button>
            </div>
            <br/>
            <div>
                <div class="row">
                    <div class="col-auto">
                        <h4>
                            Title:
                        </h4>
                    </div>
                    <div class="col-auto">
                        <div id="editTitle" class="hidden">
                            <form asp-action="EditSection" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" name="Id" asp-for="@Model.Id" />
                                <div class="form-group">
                                    <input name="SectionTitle" asp-for="@Model.SectionTitle" class="form-control" />
                                    <span asp-validation-for="@Model.SectionTitle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                        <div id="displayTitle">
                            <h4>@Model.SectionTitle</h4>
                        </div>
                    </div>
                </div>
                <br/>
                    <div>
                        <h4>Questions:</h4>
                        <p>
                            <a class="btn btn-primary" asp-action="CreateQuestion">Create</a>
                        </p>

                        <partial name="_QuestionTablePartial" model="@new List<FaqSection>(){Model};" />

                    </div>
                </div>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
            <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Delete Section</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Do you want to delete this Section.</p>
                            <p>Name : @Model.SectionTitle</p>
                            <p>All questions in this section will be marked as unassigned</p>
                        </div>
                        <div class="modal-footer">
                            <form asp-action="DeleteSection">
                                <input name="Id" type="hidden" asp-for="@Model.Id" />
                                <button type="button" class="btn btn-secondary">Delete</button>
                            </form>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        </div>
        <script type="text/javascript" language="javascript">
            var editMode = false;

            function toggleEdit() {
                editMode = !editMode;
                var editEle = document.getElementById("editTitle");
                var displayEle = document.getElementById("displayTitle");
                var editBtnEle = document.getElementById("toggleEditBtn");
                editEle.classList.toggle("hidden");
                displayEle.classList.toggle("hidden");
                if (editMode) {
                    editBtnEle.innerHTML = "Cancel";
                } else {
                    editBtnEle.innerHTML = "Edit";
                }

            }

        </script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

</body>

</html>