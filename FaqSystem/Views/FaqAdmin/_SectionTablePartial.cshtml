@model IEnumerable<FaqSystem.Models.FaqSection>

<br />
<table class="table table-bordered fa-scroll" id="STable">
    <thead>
        <tr>
            <th>
                S No.
            </th>
            <th>
                Section Title
            </th>
            <th>
                Questions Count
            </th>
            <th>
                Controls
            </th>
        </tr>
    </thead>
    <tbody>
    @{var i=1;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            <td>
                @item.SectionTitle
            </td>
            <td>
                @item.QList.Count
            </td>
            <td>
                <a class="btn btn-info btn-sm"asp-action="SectionDetails" asp-route-id="@item.Id" asp-route-mode="details">Details</a>
            </td>
        </tr>
        i++;}
    </tbody>
</table>
<script language="javascript" type="text/javascript">

    $(document).ready(function () {
        $('#STable').DataTable();
    });
</script>
</div>